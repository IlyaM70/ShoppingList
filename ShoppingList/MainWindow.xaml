<Window x:Class="ShoppingList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoppingList"
        mc:Ignorable="d"
        Title="Список покупок" Height="450" Width="800">
    <StackPanel>
        <Label  Content="Введите товар" Height="36" Width="444"/>
        <TextBox x:Name="Add"  TextWrapping="Wrap" Width="444" Height="68"/>
        <Button  x:Name="AddButton" Content="Добавить" Height="45" Width="444" Click="AddButton_Click"/>
        <Label Content="Список покупок" Height="36" Width="444"/>
        <ListBox x:Name="List" Width="444">
            
        </ListBox>
        <Label Content="Введите товар" Height="36" Width="444"/>
        <TextBox x:Name="Delete" TextWrapping="Wrap" Width="444" Height="68"/>
        <Button  x:Name="DeleteButton" Content="Удалить" Height="45" Width="444" Click="DeleteButton_Click"/>
    </StackPanel>
</Window>
